{
  "name": "@auth-code-pkce/core",
  "version": "0.1.0",
  "description": "Framework-agnostic OAuth 2.0 Authorization Code + PKCE core library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./providers": {
      "import": "./dist/providers/index.js",
      "types": "./dist/providers/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "nanoid": "^5.0.0",
    "sha256-uint8array": "^0.10.0",
    "jwt-decode": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "oauth",
    "oauth2",
    "pkce",
    "authorization-code",
    "authentication",
    "auth"
  ],
  "author": "forgo",
  "license": "MIT"
}
