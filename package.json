{
  "name": "auth-code-pkce",
  "private": true,
  "type": "module",
  "description": "Framework-agnostic OAuth 2.0 Authorization Code + PKCE library",
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --project e2e",
    "test:e2e:providers": "pnpm exec playwright test --config=e2e/playwright.config.ts",

    "test:e2e:keycloak:v24": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=keycloak-v24",
    "test:e2e:keycloak:v25": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=keycloak-v25",
    "test:e2e:keycloak:v26": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=keycloak-v26",
    "test:e2e:keycloak": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=keycloak",
    "test:e2e:keycloak:ui": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=keycloak --ui",
    "test:e2e:keycloak:headed": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=keycloak --headed",
    "test:e2e:keycloak:all": "pnpm test:e2e:keycloak:v24 && pnpm test:e2e:keycloak:v25 && pnpm test:e2e:keycloak:v26",

    "test:e2e:authentik:v2024-8": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=authentik-v2024-8",
    "test:e2e:authentik:v2024-12": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=authentik-v2024-12",
    "test:e2e:authentik:v2025-6": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=authentik-v2025-6",
    "test:e2e:authentik": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=authentik",
    "test:e2e:authentik:ui": "pnpm exec playwright test --config=e2e/playwright.config.ts --project=authentik --ui",
    "test:e2e:authentik:all": "pnpm test:e2e:authentik:v2024-8 && pnpm test:e2e:authentik:v2024-12 && pnpm test:e2e:authentik:v2025-6",

    "test:e2e:all": "pnpm test:e2e:keycloak:all && pnpm test:e2e:authentik:all",

    "test:e2e:react:keycloak:v24": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=react-keycloak-v24",
    "test:e2e:react:keycloak:v25": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=react-keycloak-v25",
    "test:e2e:react:keycloak:v26": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=react-keycloak-v26",
    "test:e2e:react:authentik:v2024-8": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=react-authentik-v2024-8",
    "test:e2e:react:authentik:v2024-12": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=react-authentik-v2024-12",
    "test:e2e:react:authentik:v2025-6": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=react-authentik-v2025-6",

    "test:e2e:vue:keycloak:v24": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=vue-keycloak-v24",
    "test:e2e:vue:keycloak:v25": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=vue-keycloak-v25",
    "test:e2e:vue:keycloak:v26": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=vue-keycloak-v26",
    "test:e2e:vue:authentik:v2024-8": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=vue-authentik-v2024-8",
    "test:e2e:vue:authentik:v2024-12": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=vue-authentik-v2024-12",
    "test:e2e:vue:authentik:v2025-6": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=vue-authentik-v2025-6",

    "test:e2e:svelte:keycloak:v24": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=svelte-keycloak-v24",
    "test:e2e:svelte:keycloak:v25": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=svelte-keycloak-v25",
    "test:e2e:svelte:keycloak:v26": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=svelte-keycloak-v26",
    "test:e2e:svelte:authentik:v2024-8": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=svelte-authentik-v2024-8",
    "test:e2e:svelte:authentik:v2024-12": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=svelte-authentik-v2024-12",
    "test:e2e:svelte:authentik:v2025-6": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --project=svelte-authentik-v2025-6",

    "test:e2e:frameworks:all": "E2E_FRAMEWORK_TESTS=true pnpm exec playwright test --config=e2e/playwright.config.ts --grep='@framework'",

    "e2e:keycloak:v24:up": "docker compose -f e2e/providers/keycloak/v24/docker-compose.yml up -d",
    "e2e:keycloak:v24:down": "docker compose -f e2e/providers/keycloak/v24/docker-compose.yml down -v",
    "e2e:keycloak:v25:up": "docker compose -f e2e/providers/keycloak/v25/docker-compose.yml up -d",
    "e2e:keycloak:v25:down": "docker compose -f e2e/providers/keycloak/v25/docker-compose.yml down -v",
    "e2e:keycloak:v26:up": "docker compose -f e2e/providers/keycloak/v26/docker-compose.yml up -d",
    "e2e:keycloak:v26:down": "docker compose -f e2e/providers/keycloak/v26/docker-compose.yml down -v",
    "e2e:keycloak:up": "pnpm e2e:keycloak:v26:up",
    "e2e:keycloak:down": "pnpm e2e:keycloak:v26:down",

    "e2e:authentik:v2024-8:up": "docker compose -f e2e/providers/authentik/v2024-8/docker-compose.yml up -d",
    "e2e:authentik:v2024-8:down": "docker compose -f e2e/providers/authentik/v2024-8/docker-compose.yml down -v",
    "e2e:authentik:v2024-8:init": "npx tsx e2e/testing-infrastructure/provider-init/cli.ts authentik 2024.8 http://localhost:9024 auth-pkce-authentik-v2024-8-server",
    "e2e:authentik:v2024-12:up": "docker compose -f e2e/providers/authentik/v2024-12/docker-compose.yml up -d",
    "e2e:authentik:v2024-12:down": "docker compose -f e2e/providers/authentik/v2024-12/docker-compose.yml down -v",
    "e2e:authentik:v2024-12:init": "npx tsx e2e/testing-infrastructure/provider-init/cli.ts authentik 2024.12 http://localhost:9025 auth-pkce-authentik-v2024-12-server",
    "e2e:authentik:v2025-6:up": "docker compose -f e2e/providers/authentik/v2025-6/docker-compose.yml up -d",
    "e2e:authentik:v2025-6:down": "docker compose -f e2e/providers/authentik/v2025-6/docker-compose.yml down -v",
    "e2e:authentik:v2025-6:init": "npx tsx e2e/testing-infrastructure/provider-init/cli.ts authentik 2025.6 http://localhost:9026 auth-pkce-authentik-v2025-6-server",
    "e2e:authentik:up": "pnpm e2e:authentik:v2025-6:up",
    "e2e:authentik:down": "pnpm e2e:authentik:v2025-6:down",
    "e2e:authentik:init": "pnpm e2e:authentik:v2025-6:init",

    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "tsx": "^4.19.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/vue": "^8.1.0",
    "@testing-library/svelte": "^5.2.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "jsdom": "^25.0.0",
    "playwright": "^1.49.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
